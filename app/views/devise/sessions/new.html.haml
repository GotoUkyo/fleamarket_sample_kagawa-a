.LoginPage
  .AccountPage
    = render "devise/registrations/header"
  .LoginPage__body
    .Logintop
      .Logintop__body
        %p.Logintop__body--text
          アカウントをお持ちでない方はこちら
        %a.Logintop__body--registration-link{ href: '#' }
          %p.text新規会員登録
    .Loginmiddle
      .Loginmiddle__body
        = link_to "#",class: "Loginmiddle__body--gbtn" do
          = icon('fab', 'google',class: "Loginmiddle__body--icon")
          %P.com Googleでログイン
        = link_to "#",class: "Loginmiddle__body--fbtn" do
          = icon('fab', 'facebook-square fa-lg',class: "Loginmiddle__body--icon")
          %P.com Facebookでログイン
        = link_to "#",class: "Loginmiddle__body--ibtn" do
          = icon('fab', 'apple fa-lg',class: "Loginmiddle__body--icon")
          %P.com Appleでログイン
    .Loginbottom
      .Loginbottom__body
        %div.Loginbottom__body--form
          %input.Loginbottom__body--input{type: "text", placeholder: "　メールアドレス"}
        %div.Loginbottom__body--form
          %input.Loginbottom__body--input{type: "text", placeholder: "　パスワード"}
        = button_to "ログイン", "#", class: "Loginbottom__body--btn"
        %a.Loginbottom__body--content{ href: '#' }
          パスワードをお忘れの方
  = render "devise/registrations/footer"